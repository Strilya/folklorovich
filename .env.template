# Folklorovich Environment Variables
# Copy this file to .env and fill in your actual API keys

# Unsplash API Configuration
# Get your free API key at: https://unsplash.com/developers
# Free tier: 50 requests/hour (unlimited with delays)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Claude API Configuration (Optional - for future content expansion)
# Get your API key at: https://console.anthropic.com/
# Free tier: 50 requests/day
CLAUDE_API_KEY=your_claude_api_key_here

# Video Configuration (optional overrides)
VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920
VIDEO_FPS=30
VIDEO_CODEC=libx264
AUDIO_CODEC=aac

# TTS Configuration (optional overrides)
DEFAULT_VOICE=ru-RU-DmitryNeural
TTS_RATE=+0%
TTS_VOLUME=+0%

# Generation Settings
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5
CACHE_IMAGES=true

# Logging
LOG_LEVEL=INFO
