# Folklorovich Environment Variables
# Copy this file to .env and fill in your actual API keys

# Image API Configuration
# Unsplash API - Get your free API key at: https://unsplash.com/developers
# Free tier: 50 requests/hour
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Pexels API - Get your free API key at: https://www.pexels.com/api/
# Free tier: 200 requests/hour
PEXELS_API_KEY=your_pexels_api_key_here

# Pixabay API - Get your free API key at: https://pixabay.com/api/docs/
# Free tier: 100 requests/minute
PIXABAY_API_KEY=your_pixabay_api_key_here

# Anthropic Claude API (for AI content generation)
# Get your API key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Video Configuration (optional overrides)
VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920
VIDEO_FPS=30
VIDEO_CODEC=libx264
AUDIO_CODEC=aac

# TTS Configuration (optional overrides)
DEFAULT_VOICE=ru-RU-DmitryNeural
TTS_RATE=+0%
TTS_VOLUME=+0%

# Generation Settings
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5
CACHE_IMAGES=true

# Logging
LOG_LEVEL=INFO
